rules_version = '2';

// Firebase Storage Security Rules - Multi-Tenant
service firebase.storage {
  match /b/{bucket}/o {

    // TEMPORARY: Allow authenticated users to read/write all files
    // TODO: Add proper tenant-scoped rules
    match /{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
  }
}
